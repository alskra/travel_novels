.slick-slide, .slick-arrow, .slick-dots button, .slick-slider a
  &:focus
    outline 0
.slick-arrow, .slick-dots button
  border 0
  background none
  margin 0
  padding 0
.slick-disabled
  disabled()
.slick-dots
  list-style none
  margin 0 0 -10px
  padding 0
  display flex
  flex-flow row wrap
  justify-content center
  align-items center
  font-size 0
  color transparent
  text-align center
  li
    margin 0 5px 10px
    &:before
      content normal
    button
      square 10px
      border-radius 50%
      border 1px solid #bbb
      transition $transition-duration-base
    &.slick-active
      button
        background-color #bbb

img.slick-loading
  visibility hidden