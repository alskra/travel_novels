.pagination
  overflow hidden
  text-align center
  padding 10px 0 30px
  margin-bottom 20px
  border-bottom 1px solid #ddd

  &__inner
    margin 0 -5px

  &__item
    display inline-block
    vertical-align top
    color $gray-1
    text-decoration none
    font-size 13px
    line-height 30px
    text-align center
    min-width 30px
    height 30px
    padding 0 5px
    margin 0 5px
    background-color #f1f1f1
    border-radius 2px
    &:hover, &:focus, &_current
      color white
      text-decoration none
      background-color $green-3

    &_current
      cursor default

    &_hellip
      &, &:hover, &:focus
        color $gray-1
        background none
        cursor default

  @media (min-width $screen-md-min)
    text-align right