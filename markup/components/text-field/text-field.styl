.text-field
  display inline-block
  vertical-align top
  color $brown-1
  font-family $font-family-base
  font-size 13px
  font-weight 400
  line-height 24px
  text-align left
  height 26px
  padding 0 10px
  background-color white
  border 1px solid #e5e5e5
  border-radius 2px
  transition $transition-base
  &::placeholder
    color #989898
    opacity 1
  &,
  &:active,
  &.active
    &:focus,
    &.focus,
    &.ik_select_link_focus
      outline 0
      border-color $green-1
  &:active,
  &.active
    outline 0
  &.disabled,
  &[disabled],
  fieldset[disabled] &
    disabled()

  &_width_100
    display block
    width 100%