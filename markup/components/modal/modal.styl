.modal
  padding 30px 20px
  background-color white
  box-shadow 0 0 18px rgba(0, 0, 0, 0.24)
  position absolute
  top 0
  left 0
  width 100%
  min-height 100%
  &__btn-close
    position absolute
    top 0
    right 0
    square 30px
    background-color $red-1
    color #c1c1c1
    font-size 16px
    line-height 1em
    z-index 10
    &:hover, &:focus
      color white
  &__header
    border-bottom 1px solid #ececec
    padding 30px 20px 15px
    margin -30px -20px 30px
  &__footer
    padding 20px 0
    margin 30px 0 -30px
  &__title
    text-align center
    font-weight 900
    font-size 16px
    padding-bottom 16px
    margin 0 0 -16px
    background linear-gradient($red-1, $red-1) no-repeat 50% 100%/46px 1px
    position relative
    z-index 2
    width 100%


  @media (min-width $screen-sm-min)
    padding 40px 60px
    max-width 600px
    min-height auto
    margin 0 auto
    position relative
    &__btn-close
      position fixed
      square 80px
      font-size 25px
    &__header
      margin -40px -60px 40px
    &__footer
      margin 40px 0 -40px
