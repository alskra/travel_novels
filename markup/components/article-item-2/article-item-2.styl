.article-item-2
  margin 0 0 30px 0
  p
    &:last-child
      margin 0

  &__inner
    display block
    color black
    text-decoration none
    letter-spacing 0.050em
    font-size rem-calc(16)
    line-height (24/16)em
    padding 45px 30px
    background-color white
    border 1px solid #d6d6d6
    &:hover, &:focus
      color black
      text-decoration none
      & {$p}__title
        color $red-1

  &__date
    display block
    color #989b9f
    font-size 13px
    line-height 1em
    letter-spacing 0.010em
    margin-bottom rem-calc(12)
    .gly
      display inline-block
      vertical-align top
      font-size 10px
      margin-right 8px

  &__title
    font-size 28px
    margin 0 0 rem-calc(17)
    transition inherit

  &__cols
    overflow hidden

  &__img
    width 233px
    overflow hidden
    float left
    margin 0 30px 15px 0
    background-color #eaedef
    border 5px solid #f0f0f0

  &__img-inner
    display block
    width 100%

  &__caption
    margin-bottom $line-height-computed

  &__caption-narrow
    font-family 'Arial Narrow', $font-family-base