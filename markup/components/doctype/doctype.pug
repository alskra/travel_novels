include ../../helpers/variables
include ../../helpers/mixins

mixin doctype(title)
  doctype html
  html(class="no-js" lang="ru")
    head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      //-meta(name="viewport" content="width=device-width, initial-scale=1.0")
      meta(name="viewport" content="width=1200")
      title!= title ? title + ' â€” ' + pkg.name : pkg.name
      //- Favicons
      each favicon in faviconCode.split('\n')
        //-!= '\n    ' + favicon
      // CSS
      if isDevelopment
        link(href="static/css/components.css" rel="stylesheet" media="all")
        link(href="static/css/blocks.css" rel="stylesheet" media="all")
      else
        link(href="static/css/main.min.css" rel="stylesheet" media="all")
      // JS Inline
      script
        include ../../../app_components/img-object-fit/img-object-fit.min.js
    body.-page&attributes(attributes)
      block
      // JS
      //- script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDzOTEh0q0r-2BuVxeLGaNTXJDl-pgA_-4')
      if isDevelopment
        script(src="static/js/components.js" defer)
        script(src="static/js/blocks.js" defer)
      else
        script(src="static/js/main.min.js" defer)
