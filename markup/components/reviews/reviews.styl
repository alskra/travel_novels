.reviews
  margin 0 80px
  position relative
  &:before, &:after
    content '“'
    position absolute
    top 96px
    left -80px
    color white
    font-size 150px
    line-height 1
    font-weight 700
    pointer-events none
  &:after
    content '”'
    top auto
    left auto
    right -80px
    bottom -64px
  .slick-list
    margin-bottom 25px
  .slick-dots
    li
      margin 0 5px 5px
      button
        size 26px 8px
        opacity 0.4
        background-color white
        border-radius 4px
      &.slick-active
        button
          opacity 1
          background-color white
  &__item
    text-align center
    p
      &:last-child
        margin 0
  &__img-wrap
    overflow hidden
    size 100px 100px
    background-color black
    border-radius 5px
    margin 0 auto 15px
  &__img
    width 100%
    height 100%
  &__title
    font-size 21px
    margin 0 0 10px
    text-transform none