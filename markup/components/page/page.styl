.page
  //display flex

  &_home-project
    display block
    & {$p}__header
      background #2a333c
      margin 0 0 20px
      padding 30px 0
    & {$p}__title
      color white
      margin 0
      small
        color inherit

@keyframes loading
  100%
    transform rotate(360deg)

.loading
  &_before
    &:before
      content ''
      position absolute
      width 30px
      height 30px
      margin -15px
      border 3px solid $green-1
      border-right-color transparent
      border-radius 50%
      top 50%
      left 50%
      right 50%
      bottom 50%
      animation loading 1.2s linear infinite
      z-index $zindex-navbar

