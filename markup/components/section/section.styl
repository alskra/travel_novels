.section
  clearfix()
  margin-bottom 30px
  p
    &:last-child
      margin 0

  &_1
    color black
    letter-spacing 0.050em
    font-family 'Arial Narrow', $font-family-base
    padding 45px 25px 35px
    background-color white
    border 1px solid #d6d6d6
    & {$p}__title
      text-align center
      color black
      font-family 'Arial Narrow', $font-family-base
      font-size 28px
      letter-spacing 0.025em
      margin 0 0 rem-calc(20)

  &_2
    letter-spacing 0.025em
    color black
    font-size rem-calc(20)
    line-height (30/20)em
    margin-bottom 0
    a
      color inherit
      text-decoration none
      &:hover, &:focus
        color $link-color
        text-decoration underline

    & {$p}__title
      color #989b9f
      font-size rem-calc(28)
      font-weight 400
      letter-spacing 0.010em
      margin 0 0 ($line-height-computed/2.5)

    & {$p}__ul-list
      list-style none
      padding 0
      margin 0 0 $line-height-computed
      li
        margin-bottom rem-calc(10)

