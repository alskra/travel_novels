.form-field
  border 1px solid #959595
  padding 0 12px
  display inline-flex
  vertical-align top
  align-items center
  background-color white
  border-radius 3px
  height 46px
  font-size 1rem
  font-weight 400
  color $text-color
  transition 0.15s
  &::placeholder
    color lighten($text-color, 15)
    opacity 1

  &,
  &:active,
  &.active
    &:focus,
    &.focus,
    &.ik_select_link_focus
      outline 0
      border-color #ff7c00

  &:active,
  &.active
    outline 0

  &.disabled,
  &[disabled],
  fieldset[disabled] &
    disabled()

  &.error
    border-color red !important

  &_area
    height 125px
    padding-top 10px
    padding-bottom 10px
    resize vertical

  &_select
    display flex
    position relative
    cursor pointer
    padding-right 30px
    &:before
      content ''
      position absolute
      top 50%
      right 12px
      margin -5px 2px
      color #686868
      square 7px
      border-top 1px solid
      border-right 1px solid
      transform rotate(135deg)
    &.ik_select_link_opened
      &:before
        margin -2px 2px
        transform rotate(-45deg)
    .ik_select_link_text
      text-overflow ellipsis
      margin-top 1px


