.article-item
  display inline-block
  vertical-align top

  &__inner
    display block
    color black
    text-decoration none
    position relative
    background-color #eaedef
    border 5px solid #f6f6f6
    &:hover, &:focus
      color black
      text-decoration none
      & {$p}__title
        opacity 1

  &__img
    display block
    width 100%

  &__title
    padding 11px 13px
    position absolute
    right -5px
    bottom -5px
    left -5px
    background white
    opacity 0
    transition $transition-base

  &__title-inner
    color inherit
    font-family 'Arial Narrow', $font-family-base
    letter-spacing 0.025em
    font-size rem-calc(20)
    line-height 1.25em
    overflow hidden
    height 1.25em*2
    margin 0