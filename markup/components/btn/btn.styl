.btn
  &__label
    text-overflow ellipsis

  &__icon
    float left

  &_1
    color black
    font-weight 400
    font-size 12px
    line-height 1.1em
    padding 17px 15px 15px
    background-color white
    &:hover,
    &:focus,
    &.focus
      color black
      box-shadow inset 0 0 10px rgba(0, 0, 0, 0.5)
    &:active,
    &.active
      box-shadow inset 0 0 10px rgba(0, 0, 0, 0.5)

  &_2
    color white
    font-weight 400
    font-size 18px
    line-height 1.1em
    letter-spacing 0.075em
    padding 14px 20px 12px
    text-transform uppercase
    background-color $red-1
    &:hover,
    &:focus,
    &.focus
      color white
      box-shadow inset 0 0 10px rgba(0, 0, 0, 0.5)
    &:active,
    &.active
      box-shadow inset 0 0 10px rgba(0, 0, 0, 0.5)