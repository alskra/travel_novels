.article-view
  margin-bottom 50px
  p
    &:last-child
      margin 0

  &__img
    overflow hidden
    height 444px
    margin-bottom 50px

  &__img-inner
    display block

  &__inner
    padding 45px 30px
    background-color white
    border 1px solid #d6d6d6

  &__time
    display block
    color #989b9f
    font-size 13px
    line-height 1em
    letter-spacing 0.010em
    margin-bottom rem-calc(12)
    .gly
      display inline-block
      vertical-align top
      font-size 10px
      margin-right 8px

  &__title
    margin 0 0 ($line-height-computed/1.3)

  &__content
    letter-spacing 0.01em
    padding 0 35px
    margin-bottom $line-height-computed

  &__content-narrow
    letter-spacing 0.01em
    padding 0 35px
    font-family 'Arial Narrow', Arial, sans-serif