.write-item
  width calc(100% - 20px)
  margin 0 10px 35px
  &__img-wrap
    display block
    text-decoration none !important
    color $text-color !important
    position relative
    padding-top unquote('calc(' + percentage(204/362) + ' + 40px)')
    overflow hidden
    margin 0 -20px 24px
    &:hover, &:focus
      &+{$p}__title
        &>{$p}__title-link
          color $red-1
  &__img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &__title
    font-size 14px
    line-height 1.25em
    overflow hidden
    max-height @line-height*3
    text-align center
    margin 0 0 15px
  &__title-link
    color inherit
    text-decoration none !important
    display block
    &:hover, &:focus
      color $red-1
  &__footer
    text-align center
  &__read-more
    display inline-block
    color #888
    font-weight 500
    font-size 12px
    line-height 1.25em
    text-transform uppercase
    text-decoration none !important
    &:hover, &:focus
      color #2c2c2c
    .icon
      display inline-block
      vertical-align: top
      font-size 10px
      margin 0 0 0 12px

  @media (min-width 640px)
    width calc(50% - 20px)
    &__img-wrap
      margin-left 0
      margin-right 0

  @media (min-width $screen-md-min)
    width unquote('calc(' + percentage(1/3) + ' - 20px)')


