.social-networks
  display flex
  flex-flow row wrap
  align-items flex-start
  justify-content center
  &__item
    display flex
    justify-content center
    align-items center
    color #6e6e6e
    text-decoration none
    margin 6px 11px
    font-size 14px
    line-height 1em
    square 20px
    &:before
      display block
    &.icon-instagram
      font-size 16px
      padding-top 1px
    &:hover, &:focus
      color $green-1
      text-decoration none