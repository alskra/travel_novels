.contacts-box
  text-align center
  .section__header
    position relative
    &:before
      content ''
      position absolute
      border-bottom 1px solid #ececec
      bottom -1px
      left -99999px
      right -99999px
  &__addr
    font-size 14px
    line-height (16/14)
    margin-bottom 30px
    a
      color inherit
      text-decoration none !important
      &:hover, &:focus
        color $red-1

  @media (min-width $screen-md-min)
    text-align left
    &>.container-fluid
      display flex
      justify-content space-between
      &:before, &:after
        content normal
    .section__title
      text-align left
      background-position 0 100%
    &__col
      &_1
        width unquote('calc(' + percentage(610/1130) + ' - 38px)')
      &_2
        width unquote('calc(' + percentage(520/1130) + ' - 38px)')
        .section__header
          position relative
          &:before
            content normal

