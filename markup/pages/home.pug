include ../components/doctype/doctype

+doctype(pages.home.title)._home-project
  header.__header
    .container-fluid
      .row
        .col-sm-8.col-sm-offset-2
          h1.-page.__title #{pkg.name}
            small &nbsp;#{pkg.version}&nbsp;
              +a(pkg.name.toLowerCase() + '-' + pkg.version + '.zip') Download ZIP
  main.__content
    .container-fluid
      .row
        .col-sm-4.col-sm-offset-2
          h2= pages.home.title
          ol.-list-pages
            each page, index in pages
              if index !== 'home'
                li
                  +a(page.url) #{page.title} #[small (#{page.url})]
        .col-sm-4
          h2 Popups
          ol.-list-pages
            each modal, index in modals
              li
                +a(modal.url)(data-toggle='modal-ajax') #{modal.title} #[small (#{modal.url})]
            li #[+a()(data-fancybox='privacy-policy' data-type='ajax' data-src='popups/privacy-policy.html' data-selector='.modal') Политика конфиденциальности]

  footer.__footer
    div &nbsp;
    div &nbsp;
    div &nbsp;